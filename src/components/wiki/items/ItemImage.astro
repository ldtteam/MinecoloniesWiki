---
import { getItemImage } from '@utils/items';

interface Props {
  icon: string;
  alt?: string;
  width: number;
  height?: number;
}

const { icon, alt, width, height } = Astro.props;

const src = await getItemImage(icon, width, height);
---

<img src={src} alt={alt} loading="lazy" decoding="async" width={width} />
