---
import type { HTMLTag } from 'astro/types';
import type { CollectionEntry } from 'astro:content';

interface Props {
  versions: CollectionEntry<'versions'>[];
  inline?: boolean;
  as?: HTMLTag;
  class?: string;
}

const { versions, inline = false, as, class: cssClass } = Astro.props;
const versionNumbers = versions.map((version) => version.data.order).join(',');

const Tag = as ?? (inline ? 'span' : 'div');
---

<Tag class={cssClass} data-versions={versionNumbers}>
  <slot />
</Tag>
