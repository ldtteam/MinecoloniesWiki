---
import ItemInfoboxInternal from '@components/ui/infobox/ItemInfobox.astro';
import Wrapper from '@components/ui/infobox/Wrapper.astro';

interface Props {
  items: string[];
}

const { items } = Astro.props;
---

<Wrapper class="mb-3">
  <slot />

  <div class="grid container" slot="infobox">
    {items.map((item) => <ItemInfoboxInternal item={item} expand />)}
  </div>
</Wrapper>

<style lang="scss">
  .container {
    --bs-columns: 2;
    --bs-gap: 1em;
    direction: rtl;

    :global(*) {
      direction: initial;
    }
  }
</style>
