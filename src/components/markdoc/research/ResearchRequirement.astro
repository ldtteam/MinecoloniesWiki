---
import type { CollectionEntry } from 'astro:content';

import ResearchRequirementBuilding from './ResearchRequirementBuilding.astro';
import ResearchRequirementItem from './ResearchRequirementItem.astro';
import ResearchRequirementTag from './ResearchRequirementTag.astro';

interface Props {
  requirement: CollectionEntry<'research'>['data']['requirements'][number];
}

const { requirement } = Astro.props;
---

{requirement.type === 'building' && <ResearchRequirementBuilding requirement={requirement} />}
{requirement.type === 'item' && <ResearchRequirementItem requirement={requirement} />}
{requirement.type === 'item_tag' && <ResearchRequirementTag requirement={requirement} />}
