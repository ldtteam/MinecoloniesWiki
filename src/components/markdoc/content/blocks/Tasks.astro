---
import BuildingContentBlock from '@components/markdoc/content/BuildingContentBlock.astro';
import { getBuildingData, getBuildingName } from '@utils/building';

import type { BaseContentBlockProps } from '../types';

type Props = BaseContentBlockProps;

const { name } = Astro.props;

const buildingData = await getBuildingData(name);

const content = `This tab shows you any requests the ${getBuildingName(
  buildingData,
  false
)} is working on, and where it is going.`;
---

<BuildingContentBlock {...Astro.props} header="tasks" imageKey="tasks" imageAlt="Tasks" markdownContent={content} />
