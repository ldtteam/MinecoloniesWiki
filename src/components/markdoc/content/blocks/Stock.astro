---
import BuildingContentBlock from '@components/markdoc/content/BuildingContentBlock.astro';
import { getBuildingData, getBuildingName } from '@utils/building';

import type { BaseBuildingContentBlockProps } from '../types';

type Props = BaseBuildingContentBlockProps;

const { name } = Astro.props;

const buildingData = await getBuildingData(name);

const content = `Use this button to tell the ${getBuildingName(
  buildingData,
  false
)} to keep a minimum stock on hand. Set items will be displayed above the button.`;
---

<BuildingContentBlock
  {...Astro.props}
  header="minimum stock"
  imageKey="stock"
  imageAlt="Minimum stock"
  markdownContent={content}
/>
