---
import BuildingContentBlock from '@components/markdoc/content/BuildingContentBlock.astro';

import type { BaseBuildingContentBlockProps } from '../types';

interface Props extends BaseBuildingContentBlockProps {
  header: string;
  imageKey: string;
  imageAlt: string;
  defaultOn: boolean;
}

const { defaultOn } = Astro.props;

const content = `Each row contains a button to toggle the usage of this item on or off. By default this is **${
  defaultOn ? 'on' : 'off'
}** for all items.

There are also two controls on the page:
- The black box at the top is a search field.
- Reset to default allows you to reset everything to **${defaultOn ? 'on' : 'off'}**."`;
---

<BuildingContentBlock {...Astro.props} markdownContent={content}>
  <slot slot="before-content" />
</BuildingContentBlock>
