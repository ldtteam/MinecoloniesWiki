---
import InternalContentBlock from './InternalContentBlock.astro';

interface Props {
  image: string;
  image_alt?: string;
  cols?: number;
}

const { image, image_alt: imageAlt = '', cols = 4 } = Astro.props;
---

<InternalContentBlock cols={cols}>
  <img slot="left" src={image} alt={imageAlt} />
  <slot />
</InternalContentBlock>
