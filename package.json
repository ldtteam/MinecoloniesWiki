{
  "name": "minecolonies-wiki",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm run update:submodule && pnpm run lint && astro build",
    "lint": "astro check && tsc --noEmit && pnpm run eslint",
    "lint:fix": "astro check && tsc --noEmit && pnpm run eslint:fix",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "preview": "astro preview",
    "start": "pnpm run update:submodule && astro dev",
    "sync": "astro sync",
    "upgrade": "pnpm run upgrade:astro && pnpm run upgrade:deps",
    "upgrade:astro": "pnpm dlx @astrojs/upgrade",
    "upgrade:deps": "ncu -u -x sass && pnpm install",
    "update:submodule": "git submodule update --init --remote --merge minecolonies"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/markdoc": "^0.12.9",
    "@astrojs/markdown-remark": "^6.1.0",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/svelte": "^7.0.4",
    "@iconify-json/cib": "^1.2.2",
    "@iconify-json/material-symbols-light": "^1.2.14",
    "@iconify/json": "^2.2.306",
    "@markdoc/markdoc": "^0.5.1",
    "archiver": "^7.0.1",
    "astro": "^5.3.0",
    "astro-icon": "1.1.5",
    "astro-purgecss": "^5.2.0",
    "bootstrap": "^5.3.3",
    "date-fns": "^4.1.0",
    "iconify": "^1.4.0",
    "mdast-util-directive": "^3.1.0",
    "minecraft-data": "^3.84.1",
    "purgecss": "^7.0.2",
    "remark-directive": "^3.0.1",
    "sharp": "^0.33.5",
    "svelte": "^5.20.0",
    "swiper": "^11.2.3",
    "unist-util-visit": "^5.0.0",
    "uuid": "^11.0.5",
    "vite": "^6.1.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@astrojs/upgrade": "^0.4.3",
    "@eslint/js": "^9.20.0",
    "@types/archiver": "^6.0.3",
    "@types/eslint-plugin-markdown": "^2.0.2",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/eslint__js": "^8.42.3",
    "astro-eslint-parser": "^1.2.1",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-markdownlint": "^0.6.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "npm-check-updates": "^17.1.14",
    "prettier": "^3.5.1",
    "prettier-plugin-astro": "^0.14.1",
    "sass": "^1.77.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "8.24.0"
  }
}
