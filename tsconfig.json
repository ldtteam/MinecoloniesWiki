{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/util/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["src"],
  "exclude": ["dist", "integrations"]
}
